<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Maitre" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/branco</item>
    </style>

    <style name="Theme.Maitre" parent="Base.Theme.Maitre"/>

<!--    Padrões gerais-->
    <style name="titulo_cabecalho">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginHorizontal">30dp</item>
    </style>
    <style name="subtitulo_cabecalho">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="button_titulo_cabecalho">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/seta_esquerda</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">-45dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:backgroundTint">@color/transparente</item>
    </style>
    <style name="tw_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cinza</item>
    </style>
    <style name="tw_user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="tw_title_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">20sp</item>
    </style>

    <!--    Formulários-->
    <style name="titulo_input_formulario">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="input_formulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="button_formulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="cornerSize">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

    <!--    Navigation Bottom-->
    <style name="style_navigation_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/branco</item>
    </style>

    <!--    4. Criar conta-->
    <style name="botaoSeta" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:src">@drawable/seta_esquerda</item>
    </style>

<!--        ?. LGPD-->
    <style name="bttLgpdSim" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="cornerSize">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/branco</item>
        <item name="backgroundTint">@color/begeClaro</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="strokeColor">@color/begeClaro</item>

    </style>

    <style name="bttLgpdNao" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="cornerSize">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="backgroundTint">@color/branco</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="strokeColor">@color/verdeEscuro</item>
    </style>

    <!--    ?. Perfil-->
    <style name="perfil_info_user">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="perfil_circle_info_user">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_circle_profile</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <style name="perfil_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparente</item>
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

