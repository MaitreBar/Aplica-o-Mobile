<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Maitre" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Maitre" parent="Base.Theme.Maitre"/>

<!--    Padrões gerais-->
    <style name="titulo_cabecalho">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/old_standard_tt_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitulo_cabecalho">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="button_titulo_cabecalho">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/seta_esquerda</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">-45dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:backgroundTint">#00000000</item>
    </style>

    <!--    Formulários-->
    <style name="titulo_input_formulario">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="input_formulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="button_formulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="cornerSize">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

    <!--    Navigation Bottom-->
    <style name="style_navigation_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FBFBFB</item>
    </style>

    <!--    4. Criar conta-->
    <style name="botaoSeta" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:src">@drawable/seta_esquerda</item>
    </style>


    <!--    ?. Perfil-->
    <style name="perfil_user_name">
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="perfil_info_user">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="perfil_circle_info_user">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_circle_profile</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <style name="perfil_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/verdeEscuro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>