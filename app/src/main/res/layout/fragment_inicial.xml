<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.Inicial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp">
            <TextView
                style="@style/tw_small"
                android:text="@string/txt_bem_vindo"/>
            <TextView
                style="@style/tw_user_name"
                android:id="@+id/perfil_user_name"
                android:text="@string/perfil_user_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/ed_pesquisar_inicial"
                    style="@style/input_formulario"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_weight="1"
                    android:hint="@string/txt_pesquisar"
                    android:gravity="center_vertical|center_horizontal"/>
                <ImageButton
                    android:id="@+id/btn_pesquisar_inicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_grey"
                    android:backgroundTint="@color/transparente"/>
            </LinearLayout>
        </LinearLayout>
        <!--        Carrossel-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bar_um"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="#66000000"
                android:fontFamily="@font/quicksand_bold"
                android:text="Confira os lugares mais visitados"
                android:textColor="@color/branco"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_mais_visitados_inicial"
                style="@style/button_formulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/verdeEscuro"
                android:text="Avançar"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Categorias"
                style="@style/tw_title_medium"/>
            <!--            Grupo de botões tipo de comida-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--                Botões tipo de comida-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="2dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/drinks_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@mipmap/img_drink"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="2dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/snacks_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@mipmap/img_snack"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Snack"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="2dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/petiscos_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@mipmap/img_petiscos"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Petisco"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="2dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sobremesas_inicial"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@mipmap/img_sobremesa"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sobremesa"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="@string/txt_estabelecimentos"
            style="@style/tw_title_medium"/>
        <!--        Container lista estabelecimentos-->
        <LinearLayout
            android:id="@+id/gl_estabelecimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            Divisão para cards-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>