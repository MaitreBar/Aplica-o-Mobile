<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reserva">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco">

        <!--        Card verde escuro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/verdeEscuro">

            <!--            Texto CardVerdeEscuro -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/old_standard_tt_bold"
                android:text="@string/menu_reservas"
                android:textColor="@color/branco"
                android:textSize="40sp"/>

            <!--            Seta: voltar -->
            <ImageButton
                style="@style/botaoSeta"
                android:layout_marginStart="130dp"
                android:layout_marginTop="50dp"
                android:contentDescription="botÃ£o de voltar"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!--        Card de reserva-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="210dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="210dp"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="10dp"
                            android:clickable="true"
                            android:contentDescription="Foto do bar"
                            android:focusable="true"
                            android:src="@mipmap/bar_um"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_light"
                            android:text="@string/nome_bar1"
                            android:textStyle="bold"
                            android:gravity="center"
                            tools:ignore="RtlHardcoded" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="13dp"
                                android:fontFamily="@font/quicksand_light"
                                android:text="@string/dois_cifroes"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/quicksand_light"
                                android:gravity="center_vertical"
                                android:text="@string/nota_bar1"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="205dp"
                        android:layout_marginStart="200dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/assentos"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/quicksand_light"
                            android:text="@string/nrm_assento"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/nomes"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/quicksand_light"
                            android:text="@string/nome_reserva"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/dia"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/quicksand_light"
                            android:text="@string/dia_reserva"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/assentos"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/quicksand_light"
                            android:text="@string/nrm_assento"
                            android:textSize="15sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>