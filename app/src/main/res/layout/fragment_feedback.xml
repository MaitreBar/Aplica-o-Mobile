<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        Card verde escuro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/verdeEscuro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="120dp"
                android:fontFamily="@font/old_standard_tt_bold"
                android:text="@string/btt_feedback"
                android:textColor="@color/branco"
                android:textSize="40sp">

            </TextView>

            <!--            Seta: voltar -->
                <ImageButton
                    style="@style/botaoSeta"
                    android:layout_marginTop="70dp"
                    android:contentDescription="botão de voltar"
                    tools:ignore="HardcodedText"

                    />

            </LinearLayout>

        </LinearLayout>

        <!--        Conteúdo de tela-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            >

            <!--        Texto da reserva -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="@string/txt_feedback"
                    android:textSize="17sp"
                    android:layout_marginStart="8sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/assentos"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/nrm_assento"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_light"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"
                        android:id="@+id/assento_reserva" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/nomes"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/nome_reserva"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_light"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"
                        android:id="@+id/nome_reserva"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/dia"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:fontFamily="@font/quicksand_light"
                        android:gravity="center"
                        android:text="@string/dia_reserva"
                        android:textColor="@color/verdeEscuro"
                        android:textSize="18sp"
                        android:id="@+id/dia_reserva" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/horario"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="@string/horario_reserva1"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_light"
                        android:gravity="center"
                        android:textColor="@color/verdeEscuro"
                        android:id="@+id/horario_reserva"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="275dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/cinza"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:hint="@string/txt_feedback2"
                        android:gravity="top"
                        android:textColor="@color/branco"
                        android:textSize="14sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Botão de comentário   -->

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:textColor="@color/branco"
                android:layout_gravity="center"
                android:text="@string/btt_reserva"
                android:fontFamily="@font/old_standard_tt_regular"
                android:textSize="19sp"
                android:gravity="right"
                android:backgroundTint="@color/verdeEscuro"
                style="@style/reserva_button"

                />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>