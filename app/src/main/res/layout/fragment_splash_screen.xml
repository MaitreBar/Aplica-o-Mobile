<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">



    <ImageView
        android:id="@+id/iv_logo_splash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/LogoTiffanyEscuro"
        android:layout_gravity="center"
        />

    <ProgressBar
        android:id="@+id/progress_circular_splash"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateTint="@color/begeClaro"

        />

    <TextView
        android:id="@+id/tv_nome_splash"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/old_standard_tt_regular"
        android:text="@string/maitre"
        android:textAlignment="center"
        android:textColor="@color/begeClaro"
        android:textSize="25sp"
        android:layout_gravity="bottom"
        tools:ignore="RtlCompat"
        android:layout_marginBottom="30dp"/>

</FrameLayout>