<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.ListaEstabelecimento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bem vindo (a)"
                android:textColor="@color/cinza"/>
            <TextView
                style="@style/perfil_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perfil_user_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/input_formulario"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Pesquisar"
                    android:textColor="@color/preto"
                    android:padding="13dp"
                    android:gravity="center"/>
                <ImageButton
                    android:id="@+id/btn_pesquisar_inicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_grey"
                    android:backgroundTint="#00000000"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estabelecimentos"
            android:gravity="center"
            android:fontFamily="@font/old_standard_tt_bold"
            android:textSize="18sp"
            android:layout_marginVertical="10dp"/>

        <!--        Container lista estabelecimentos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>