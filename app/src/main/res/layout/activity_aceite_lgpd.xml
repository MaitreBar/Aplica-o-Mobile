<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.AceiteLgpd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Card verde escuro -->
        <LinearLayout
            style="@style/action_bar"
            android:background="@color/verdeEscuro">
            <LinearLayout
                style="@style/action_bar_div">
                <TextView
                    style="@style/action_bar_title"
                    android:text="@string/aceite_lgpd"/>
                <ImageButton
                    style="@style/action_bar_icon_arrow_left"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_lgpd3"
                android:padding="20dp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/verdeEscuro"
                android:textAlignment="center"/>

         </LinearLayout>

        </ScrollView>

        <LinearLayout
            style="@style/card_escolha"
            android:background="@drawable/bottom_navigation_stroke"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/old_standard_tt_regular"
                android:text="@string/txt_lgpd1"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/quicksand_regular"
                android:padding="10dp"
                android:text="@string/txt_lgpd2"
                android:textAlignment="center"
                android:textColor="@color/neutralTertiary"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/lgpd_recusa"
                    style="@style/bttLgpdNao"
                    android:text="@string/btt_nao"/>
                <Button
                    android:id="@+id/lgpd_aceite"
                    style="@style/bttLgpdSim"
                    android:text="@string/btt_sim"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>