<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.AceiteLgpd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Card verde escuro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/verdeEscuro"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="300dp"
                    style="@style/titulo_cabecalho"
                    android:text="@string/aceite_lgpd"/>

                <ImageButton
                    style="@style/button_titulo_cabecalho"
                    android:layout_weight="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_lgpd3"
                android:padding="20dp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/verdeEscuro"
                android:textAlignment="center"/>

         </LinearLayout>

        </ScrollView>


        </LinearLayout>

</FrameLayout>