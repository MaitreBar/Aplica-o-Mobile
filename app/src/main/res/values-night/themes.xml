<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Maitre" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="tw_user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/verdeAgua</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="tw_title_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/verdeAgua</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">20sp</item>
    </style>
    <style name="button_superior_voltar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/transparente</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">-25dp</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_back_black</item>
        <item name="android:hint">@string/reservar_estabelecimento</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
        <item name="android:textColorHint">@color/verdeAgua</item>
    </style>
    <style name="input_formulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/cinzaClaro</item>
        <item name="android:textColorHint">#686868</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/cinzaEscuro</item>
    </style>
</resources>